@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VIS Service center", "MainPage", "Home", new { login = HttpContext.Current.User.Identity.Name }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Orders", "MainPage", "Orders", new { login = HttpContext.Current.User.Identity.Name }, null)</li>
                    <li>@Html.ActionLink("Count order price", "CountOrderPrice", "Orders")</li>
                </ul>
                <ul class="nav navbar-nav" style="float: right">
                    <li><a>Welcome, @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</a></li>
                    <li>@Html.ActionLink("Profile", "Profile", "Profile")</li>
                    <li>@(User.Identity.IsAuthenticated ? @Html.ActionLink("Log out", "SignOut", "Home") : @Html.ActionLink("Log in", "Login", "Home"))</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
